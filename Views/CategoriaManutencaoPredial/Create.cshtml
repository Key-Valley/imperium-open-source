@model Fatec_Facilities.Models.CategoriaManutencaoPredial

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutUser";
}

<hr />
<div class="container bg-light text-dark p-5 rounded my-5 h-50 w-50">
    <h1 class="text-center">Criar uma nova categoria</h1>
    <hr class="w-25" />
    <br />
    <div class="row">
        <div class="col-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-4 col-sm-12 mx-auto">
        <a asp-action="Index"> <i class="fas fa-arrow-left"></i> Voltar para os as categorias </a>
    </div>
<div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
