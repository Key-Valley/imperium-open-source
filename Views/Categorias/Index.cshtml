@model IEnumerable<Fatec_Facilities.Models.Categoria>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container">
    <br />
    <div class="d-flex">
        <div class="flex-fill">
            <h1><i class="fas fa-list"></i> Categorias: </h1>
        </div>
        <div class="flex-fill align-items-center justify-content-center">
            <a class="float-right btn btn-primary text-white" asp-action="Create"><i class="fas fa-plus"></i> &nbsp; Cadastrar uma nova categoria</a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped table-light overflow-auto" style="height:10vh !important">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td class="float-right">
                        <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pen"></i></a>
                        <a class="btn btn-outline-info" style="width:40px" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info"></i></a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>