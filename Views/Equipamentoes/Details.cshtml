@model Fatec_Facilities.Models.Equipamento

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container bg-light text-dark p-5 rounded my-5 h-50 w-50">
    <h1 class="text-center">Detalhes do equipamento:</h1>
    <hr class="w-25" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Registro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Registro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bloco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bloco.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Local)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Local.Nome)
        </dd>
    </dl>

    <br />
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id"><i class="fas fa-pen"></i> Editar</a> |
        <a asp-action="Index"> <i class="fas fa-arrow-left"></i> Voltar para os equipamentos </a>
    </div>
</div>