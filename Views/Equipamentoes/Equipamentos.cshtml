@model IEnumerable<Fatec_Facilities.Models.Equipamento>

@{
    ViewData["Title"] = "Equipamentos Page";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container">

    <h1> Equipamentos do local </h1>
    <br />
    @using (Html.BeginForm("Equipamentos", "Equipamentoes", FormMethod.Get))
    {
        <div class="container mb-3">
            <label class="d-block text-white text-bold">Categorias</label>
            <div class="row d-flex align-items-center">
                <div class="col-md-8">
                    @Html.DropDownList("nomeCategoria", new SelectList(ViewBag.Categorias),new { @class = "form-control" })
               </div>
               <div class="col-md-2">
                    <button type="submit" class="btn btn-block btn-primary">
                        <i class="fas fa-search"></i>&nbsp;&nbsp;Procurar
                    </button>
                </div>
                <div class="col-md-2">
                    <button type="submit" name="redo" value="true" class="btn btn-block btn-light"> 
                        <i class="fas fa-redo"></i>&nbsp;&nbsp;Redefinir
                    </button>
               </div>
           </div>
        </div>
    }

    <ul class="list-group d-flex flex-column">
        @foreach (var item in Model)
        {

            <li class="list-group-item">
                <a class="text-decoration-none d-flex flex-column flex-fill" asp-action="DetalhesParaOS" asp-route-id="@item.Id">
                    <div class="d-flex">
                        <span>Registro: </span><b> @Html.DisplayFor(modelItem => item.Registro) </b>
                    </div>
                    <div class="d-flex">
                        <span>Descrição: </span> <i> @Html.DisplayFor(modelItem => item.Descricao) </i>
                    </div>
                </a>
            </li>

        }
    </ul>
</div>