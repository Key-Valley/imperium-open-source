@model Fatec_Facilities.Models.ManutencaoPredial

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutUser";
}

<div class="container bg-light text-dark p-5 rounded my-5 h-50 w-50">
    <h1 class="text-center">Criar uma nova OS de manutenção predial</h1>
    <hr class="w-25" />
    <br />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LocalId" class="control-label"></label>
                    <select asp-for="LocalId" class ="form-control" asp-items="ViewBag.LocalId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="CategoriaManutencaoPredialId" class="control-label"></label>
                    <select asp-for="CategoriaManutencaoPredialId" class="form-control" asp-items="ViewBag.CategoriaManutencaoPredialId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="DataSolicitacao" class="control-label"></label>
                    <input asp-for="DataSolicitacao" class="form-control" />
                    <span asp-validation-for="DataSolicitacao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataAprovacao" class="control-label"></label>
                    <input asp-for="DataAprovacao" class="form-control" />
                    <span asp-validation-for="DataAprovacao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataConclusao" class="control-label"></label>
                    <input asp-for="DataConclusao" class="form-control" />
                    <span asp-validation-for="DataConclusao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StatusId" class="control-label"></label>
                    <select asp-for="StatusId" class ="form-control" asp-items="ViewBag.StatusId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="FornecedorId" class="control-label"></label>
                    <select asp-for="FornecedorId" class ="form-control" asp-items="ViewBag.FornecedorId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Valor" class="control-label"></label>
                    <input asp-for="Valor" class="form-control" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Voltar para a lista</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
