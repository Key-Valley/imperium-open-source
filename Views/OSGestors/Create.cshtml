@model Fatec_Facilities.Models.OSGestor

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container bg-light text-dark p-5 rounded my-5 h-50 w-50">
    <h1 class="text-center">Realizar nova requisição:</h1>
    <hr class="w-25" />
    <br />
    <div class="row">
        <div class="col-md-12 mx-auto">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ProblematicaId" class="control-label"></label>
                    <select asp-for="ProblematicaId" id="elProblems" class="form-control" asp-items="ViewBag.ProblematicaId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="FornecedorId" class="control-label"></label>
                    <select asp-for="FornecedorId" class="form-control" asp-items="ViewBag.FornecedorId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-block btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
