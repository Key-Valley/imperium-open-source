@model Fatec_Facilities.Models.OSGestor

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container bg-light text-dark p-5 rounded my-5 h-50 w-50">
    <h3 class="text-center">Tem certeza que deseja excluir ?</h3>
    <hr class="w-25" />
    <div class="col-md-12 mx-auto">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataSolicitacao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataSolicitacao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataAprovacao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataAprovacao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataConclusao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataConclusao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Equipamento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Equipamento.Descricao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Problematica)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Problematica.Descricao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fornecedor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fornecedor.CNPJ)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="btn btn-block btn-danger" />
            <br />
            <a asp-action="Index"> <i class="fas fa-arrow-left"></i> Voltar para os blocos </a>
        </form>
    </div>

</div>
