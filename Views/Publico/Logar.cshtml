@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login";
}
    

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <div class="container d-flex align-items-center justify-content-center">
            <div class="row m-0">
                <div class="col-xl-6 col-md-12">
                    <img class="img-fluid" style="margin:auto;height:50em; width: 40em" src="~/imgs/maintenance-animate.svg" />
                </div>
                <div class="col-xl-6 col-md-12 d-flex align-items-center justify-content-center p-0">
                    <div class="container p-0">                    
                        <div class="col-12 p-0">
                            <h1 class="font-weight-bold">Imperium Facilities</h1>
                            <p class="text-monospace">VocÃª no controle</p>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <h3 class="text-center">@ViewBag.Error</h3>
                        <div class="form-group">
                            <label class="col-md-2">Email</label>
                            <div class="col-md-10">
                                <input type="text" name="email" id="email" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2">Senha</label>
                            <div class="col-md-10">
                                <input type="password" name="senha" id="senha" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-10">
                            <a asp-action="EsqueciSenha">Esqueci minha senha</a>
                        </div>
                        <br />
                        <div class="col-md-10">
                            <input type="submit" value="Entrar" class="btn btn-primary btn-block" />
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>    
}