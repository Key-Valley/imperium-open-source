<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Imperium Facilities</title> 

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/icofont/icofont.min.css" rel="stylesheet">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets/vendor/venobox/venobox.css" rel="stylesheet">
    <link href="~/assets/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/dist/bundle.css" />

    <!-- Favicons -->
    <link rel="icon" type="image/png" sizes="36x36"  href="~/wwwroot/android-icon-36x36.png">

    <!-- Favicons PWA Ios -->
    <link rel="apple-touch-icon" href="~/wwwroot/imgs/bitmap-blue192.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/wwwroot/imgs/bitmap-blue192.png">
    <link rel="apple-touch-icon" sizes="180x180" href="~/wwwroot/imgs/bitmap-blue192.png">
    <link rel="apple-touch-icon" sizes="167x167" href="~/wwwroot/imgs/bitmap-blue192.png">

</head>
<body>
    <header id="header" class="fixed-top">
        <div class="container d-flex">
            <div class="logo mr-auto">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/imgs/bitmap.png" alt="" class="img-fluid">
                </a>
            </div>
            <nav class="nav-menu d-none d-lg-block">
              <ul>
                <li class="active"><a asp-controller="Home" asp-action="Index"><i class="icofont-home"></i>&nbsp;Home</a></li>
                <li><a href="#services"><i class="icofont-bag-alt"></i>&nbsp;Serviços</a></li>
                <li><a href="#team"><i class="icofont-users-alt-2"></i>&nbsp;Nosso Time</a></li>
                <li><a href="#contact"><i class="icofont-phone"></i>&nbsp;Contate-nos</a></li>
                <li><a class="mt-1 text-white btn btn-primary py-1 px-3 mx-2" asp-controller="Publico" asp-action="Logar">Login</a></li>
              </ul>
            </nav><!-- .nav-menu -->
        </div>
  </header><!-- End Header -->

    <div class="container-fluid bg-white">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/venobox/venobox.min.js"></script>
    <script src="~/assets/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>
    <script src="~/dist/bundle.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
