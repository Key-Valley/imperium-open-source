@model Fatec_Facilities.Models.Usuario

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container">
    <h1 class="text-center">Senha</h1>
    @using (Html.BeginForm("EditPassword", "Gestors"))
    {
        <div class="form-group">
            <label asp-for="Senha" class="control-label">Senha antiga:</label>
            <input name="Senha" asp-for="Senha" class="form-control" type="password"/>
        </div>
        <div class="form-group">
            <label class="control-label">Nova senha:</label>
            <input name="NovaSenha" class="form-control" type="password"/>
        </div>
        <div class="form-group">
            <label class="control-label">Repita a nova senha:</label>
            <input name="NovaSenha" class="form-control" type="password"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Alterar senha" class="btn btn-primary" asp-action="EditPassword" />
        </div>
    }
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }