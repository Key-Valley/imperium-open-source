@model IEnumerable<Fatec_Facilities.Models.Usuario>

@{
    var email = ViewData["Email"] as string;
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container">
    <br />
    <div class="d-flex mb-3">
        <div class="flex-fill">
            <a class="btn btn-primary" asp-area="" asp-controller="Usuario" asp-action="EditProfile">
                <i class="fas fa-user"></i> Editar meu perfil:
            </a>
            <a class="btn btn-primary" asp-area="" asp-controller="Usuario" asp-action="EditPassword">
                <i class="fas fa-user-lock"></i> Editar Senha
            </a>
        </div>
    </div>
    <div class="d-flex">
        <div class="flex-fill">
            <h1><i class="fas fa-users"></i> Gestores: </h1>
        </div>
        <div class="flex-fill align-items-center justify-content-center">
            <a class="float-right btn btn-primary text-white" asp-action="Create"><i class="fas fa-plus"></i> &nbsp;
                Cadastrar um novo gestor</a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped table-light overflow-auto" style="height:10vh !important">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rm)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gestor)
                </th>
                <th>
                    Empresa
                </th>
                <th></th>
            </th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.Email != email)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gestor)
                </td>
                <td>
                    @ViewBag.Empresa.NomeFantasia
                </td>
                <td class="float-right">
                    <a class="btn btn-outline-info" style="width:40px" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fas fa-info"></i>
                    </a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
                }
            }
        </tbody>
    </table>
</div>